<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="wrap_content"
    android:layout_height="24dp"
    
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    >

    <LinearLayout 
        android:id="@+id/atlas_view_participants_picker_name_convert"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/atlas_shape_rounded24_gray"
        >
    
        <!-- avatar placeholder -->
    	<FrameLayout 
            android:layout_width="24dp"
            android:layout_height="24dp"
        	android:layout_gravity="center"
            android:visibility="gone"
            >
         
            <ImageView 
                android:id="@+id/atlas_view_participants_picker_name_convert_avatar_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                />        
            
            <TextView 
            	android:id="@+id/atlas_view_participants_picker_name_convert_ava"
            	android:layout_width="match_parent"
            	android:layout_height="match_parent"
            	android:text="TS"
                android:textSize="@dimen/atlas_text_size_smaller2"
            	android:gravity="center"
            	/>
            
        </FrameLayout>
        
    	<TextView
    		android:id="@+id/atlas_view_participants_picker_name_convert_name"
    		android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_weight="1"
    		android:layout_gravity="center"
    	    android:paddingLeft="10dp"
    	    android:text="Tomaz Stolfa" 
    	    android:textSize="16sp"
            android:paddingRight="10dp"
            android:paddingBottom="1dp"
    	    />
        
    </LinearLayout>

</FrameLayout>