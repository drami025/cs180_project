<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.layer.atlas.messenger.AtlasSettingsScreen"
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/atlas_background_white"
    >
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
            
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <include layout="@layout/atlas_actionbar_stub"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/atlas_messenger_activity_horizontal_margin"
                android:paddingRight="@dimen/atlas_messenger_activity_horizontal_margin"
                android:textSize="@dimen/atlas_text_size_smaller"
                android:textColor="@color/atlas_text_blue"
                android:text="Account"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/atlas_messenger_activity_horizontal_margin"
                android:paddingRight="@dimen/atlas_messenger_activity_horizontal_margin"
                >
                
                <TextView
                    android:id="@+id/atlas_settings_username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="@dimen/atlas_text_size_general"
                    android:textColor="@color/atlas_text_black"
                    android:text=""/>
                
                <TextView
                    android:id="@+id/atlas_settings_login_status_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textSize="@dimen/atlas_text_size_smaller"
                    android:textColor="@color/atlas_text_gray"
                    android:text=""/>
                
            </LinearLayout>
            
            <TextView
                android:id="@+id/atlas_screen_settings_logout"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/atlas_messenger_activity_horizontal_margin"
                android:paddingRight="@dimen/atlas_messenger_activity_horizontal_margin"
                android:textSize="@dimen/atlas_text_size_general"
                android:textColor="@color/atlas_text_black"
                android:text="Log Out"/>
            
            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/atlas_background_gray"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/atlas_messenger_activity_horizontal_margin"
                android:paddingRight="@dimen/atlas_messenger_activity_horizontal_margin"
                >
                 
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="@dimen/atlas_text_size_general"
                    android:textColor="@color/atlas_text_black"
                    android:text="Version"/>
                 
                <TextView
                    android:id="@+id/atlas_settings_debug_version_app_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/atlas_text_size_smaller"
                    android:textColor="@color/atlas_text_gray"
                    android:text="Layer Atlas 0.1"/>
                 
                <TextView
                    android:id="@+id/atlas_settings_debug_version_sdk_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textSize="@dimen/atlas_text_size_smaller"
                    android:textColor="@color/atlas_text_gray"
                    android:text="Layer SDK 0.13.3"/>
                 
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/atlas_messenger_activity_horizontal_margin"
                android:paddingRight="@dimen/atlas_messenger_activity_horizontal_margin"
                >
                 
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="@dimen/atlas_text_size_general"
                    android:textColor="@color/atlas_text_black"
                    android:text="Layer SDK Version"/>
                 
                <TextView
                    android:id="@+id/atlas_settings_debug_layersdk_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textSize="@dimen/atlas_text_size_smaller"
                    android:textColor="@color/atlas_text_gray"
                    android:text="0.11.3"/>
                 
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/atlas_messenger_activity_horizontal_margin"
                android:paddingRight="@dimen/atlas_messenger_activity_horizontal_margin"
                >
                 
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textSize="@dimen/atlas_text_size_general"
                    android:textColor="@color/atlas_text_black"
                    android:text="Build"/>
                 
                <TextView
                    android:id="@+id/atlas_settings_debug_build1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/atlas_text_size_smaller"
                    android:textColor="@color/atlas_text_gray"
                    android:text="LayerAtlas v0.1"/>
                 
                <TextView
                    android:id="@+id/atlas_settings_debug_build2_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:textSize="@dimen/atlas_text_size_smaller"
                    android:textColor="@color/atlas_text_gray"
                    android:text="LayerSDK v0.13.3"/>
                 
            </LinearLayout>

        </LinearLayout>
    
    </ScrollView>        
    
    <include layout="@layout/atlas_actionbar_layout"/>
    
</FrameLayout>

